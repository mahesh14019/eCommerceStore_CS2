<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web Store</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css'>

</head>
<body>
    <div class="container-fluid">
        <header class="row text-white py-2">
            <div class="col-2">
                @* <img src="~/icons/logo.jpg" alt="Logo" width="50" height="50"> *@
            </div>
            <div class="col-8">
                <h2>E-commerce Web Application</h2>
            </div>
            <div class="col-2">
                @if (User.Identity.IsAuthenticated)
                {
                    <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-link" style="color:white">Logout</button>
                    </form>
                }
            </div>
        </header>
        <nav class="row col-md-2 col-lg-2 d-md-block nav-color">
            <ul>
                <li>
                    <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Index">Home</a>
                </li>
                <li>
                    <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Create">Add Product</a>
                </li>
            </ul>
        </nav>
        <main>
            <!-- Content Goes Here -->
            <div class="content">
                <main role="main" class="pb-5">
                    @RenderBody()
                </main>
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024- <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
